<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

<bean id="restSecurityMapping" class="org.geoserver.rest.RESTMapping">
<property name="routes">
  <map> 
        <entry>
          <key><value>/security/masterpw.{type}</value></key>
          <value>masterPasswordResource</value>
        </entry>
        <entry>
          <key><value>/security/acl/layers.{type}</value></key>
          <value>dataAccessControlResource</value>
        </entry>
        <entry>
          <key><value>/security/acl/services.{type}</value></key>
          <value>serviceAccessControlResource</value>
        </entry>
        <entry>
          <key><value>/security/acl/rest.{type}</value></key>
          <value>restAccessControlResource</value>
        </entry>
        <entry>
          <key><value>/security/acl/layers/{rule}</value></key>
          <value>dataAccessControlResource</value>
        </entry>
        <entry>
          <key><value>/security/acl/services/{rule}</value></key>
          <value>serviceAccessControlResource</value>
        </entry>
        <entry>
          <key><value>/security/acl/rest/{rule}</value></key>
          <value>restAccessControlResource</value>
        </entry>
        <entry>
          <key><value>/security/acl/catalog.{type}</value></key>
          <value>catalogModeResource</value>
        </entry>                
                        
                        
  </map>
</property>
</bean>

  <bean id="masterPasswordResource" class="org.geoserver.security.rest.MasterPasswordResource" singleton="false">
  </bean>

  <bean id="dataAccessControlResource" class="org.geoserver.security.rest.DataAccessControlResource" singleton="false"/>
  <bean id="restAccessControlResource" class="org.geoserver.security.rest.RESTAccessControlResource" singleton="false"/>
  <bean id="serviceAccessControlResource" class="org.geoserver.security.rest.ServiceAccessControlResource" singleton="false"/>
  <bean id="catalogModeResource" class="org.geoserver.security.rest.CatalogModeResource" singleton="false"/>
  
  
</beans>
