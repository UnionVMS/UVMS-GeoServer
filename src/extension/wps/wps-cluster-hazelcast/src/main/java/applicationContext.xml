<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<bean id="hazelcastLoader" class="org.geoserver.wps.hz.HazelcastLoader">
       <constructor-arg ref="dataDirectory"/>
